{
  "name": "cssy",
  "description": "A(nother) browserify transform for css sources (with vitamines)",
  "version": "0.0.0",
  "author": "Jean Ponchon <jean.ponchon@novadiscovery.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/nopnop/cssy.git"
  },
  "licenses": "MIT",
  "main": "./src/cssy.js",
  "engines": {
    "node": ">= 0.10"
  },
  "scripts": {
    "test": "mocha",
    "spec": "mocha --reporter spec",
    "monitor": "mocha --reporter spec --watch",
    "debugtest": "mocha --debug-brk --reporter spec",
    "coverage": "rm -rf ./src-cov && jscoverage ./src ./src-cov && COVERAGE=true mocha --reporter html-cov > ./coverage.html || true && rm -rf ./src-cov",
    "jshint": "./node_modules/.bin/jshint --exclude node_modules"
  },
  "dependencies": {
    "async": "^0.9.0",
    "concat-stream": "^1.4.6",
    "csswring": "^1.3.0",
    "debug": "^2.0.0",
    "extend": "^1.3.0",
    "lrio": "0.0.2",
    "relative-package": "^1.0.0",
    "resolve": "^1.0.0",
    "through2": "^1.1.1"
  },
  "devDependencies": {
    "browserify": "^5.12.1",
    "expect.js": "*",
    "jsdom": "^1.0.0",
    "jshint": "*",
    "mocha": "*",
    "postcss-calc": "^2.0.1",
    "postcss-custom-properties": "^0.3.1",
    "rework": "^1.0.1",
    "rework-calc": "^1.1.0",
    "rework-vars": "^3.1.1"
  },
  "browser": "./src/cssy-browser.js",
  "keywords": [
    "css",
    "browserify",
    "browserify-transform",
    "livereload",
    "browser",
    "webcomponent"
  ],
  "publishConfig": {
    "registry": "http://registry.npmjs.org/"
  }
}
